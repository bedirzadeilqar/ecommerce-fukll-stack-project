
@{
    ViewBag.Title = "editmenyu";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using ecommerce.Models

<div class="container">
    <form action="~/Admin/updatemenu/@Model.MenyuId" method="post" class="was-validated" enctype="multipart/form-data">
        <div class="form-group">
            <label for="uname">MenyuName:</label>
            <input type="text" class="form-control" id="uname" placeholder="MenyuName" name="MenyuName" value="@Model.MenyuName" required>
        </div>
        <div class="form-group">
            <label for="uname">MenyuText:</label>
            <input type="text" class="form-control" id="uname" placeholder="MenyuText" name="MenyuText" value="@Model.MenyuText" required>
        </div>
        <div class="form-group">
            <label for="uname">MenyuQiymet:</label>
            <input type="text" class="form-control" id="uname" placeholder="MenyuQiymet" name="MenyuQiymet" value="@Model.MenyuQiymet" required>
        </div>
        <div class="form-group">
            <label for="pwd">MenyuPhoto:</label>
            <input type="file" class="form-control" id="pwd" placeholder="MenyuPhoto" name="MenyuPhoto" value="@Model.MenyuPhoto" formenctype="multipart/form-data">
        </div>

        <div class="form-group">
            <label>
                Menyu Category:
            </label>
            <select name="MenyuCategoryId">
                @foreach (var item in ViewBag.menyu)
                {
                    <option @(item.CategoryId == Model.MenyuCategoryId ? "selected" : "") value="@item.CategoryId">@item.CategoryName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

